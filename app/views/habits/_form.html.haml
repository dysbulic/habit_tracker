= form_for @habit do |f|
  - if @habit.errors.any?
    #error_explanation
      %h2= "#{pluralize(@habit.errors.count, "error")} prohibited this habit from being saved:"
      %ul
        - @habit.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :color
    = f.text_field :color
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_field :description
  .actions
    = f.submit 'Save'
